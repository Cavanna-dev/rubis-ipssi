{% extends '::base.html.twig' %}

{% block body %}
    <div class="container">
        {{  dump(user) die() }}
        <h3>Liste des utilisateurs</h3> <br/>
        <table class="table table-hover" >
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Adresse</th>
                <th>Rôle</th>
                <th>Action</th>
            </tr>
            {% for user in users %}
                <tr>
                    <td>{{ user.lastName}}</td>
                    <td>{{ user.firstName }}</td>
                    <td>
                        {% for address in user.getAddresses %}
                            {{ address.street }}
                        {% endfor %}
                    </td>
                    <td>
                        {% for role in user.role %}
                            {{ role.roleName }}
                        {% endfor %}
                    </td>
                    <td>
                        <button type="button" class="btn btn-default">Editer</button>
                        <button type="button" class="btn btn-danger">Supprimer</button>
                    </td>
                </tr>
            {% endfor %}
        </table>
        <button type="button" class="btn btn-primary">Ajouter un utilisateur</button>
    </div>

{% endblock %}

